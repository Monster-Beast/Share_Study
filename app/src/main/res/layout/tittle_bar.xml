<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tittle_bar"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    android:layout_gravity="top"
    android:orientation="horizontal">

    <Button
        android:id="@+id/bt_go_drawer"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:stateListAnimator="@drawable/select_animator"
        android:background="@drawable/drawer_up" />

    <TextView
        android:layout_height="50dp"

        android:layout_width="0dp"
        android:id="@+id/tv_select_label"

        android:text="@string/分类"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_weight="3"
        />
    <Button
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_width="0dp"
        android:id="@+id/bt_search"
        android:background="@drawable/search"
        android:layout_weight="1"
        android:stateListAnimator="@drawable/select_animator"
        />
    <Button
        android:layout_height="50dp"
        android:layout_width="0dp"
        android:id="@+id/bt_add"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/add_ic"
        android:stateListAnimator="@drawable/select_animator"
        />
</LinearLayout>